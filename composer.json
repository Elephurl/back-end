{
    "name": "elephurl/elephurl",
    "description": "A URL shortener with the memory of an elephant",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-redis": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^4.0",
        "jetbrains/phpstorm-stubs": "^2024.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage --coverage-text",
        "lint": "./vendor/bin/phpcs",
        "lint:fix": "./vendor/bin/phpcbf",
        "db:seed": "php database/seeders/UrlSeeder.php"
    }
}
